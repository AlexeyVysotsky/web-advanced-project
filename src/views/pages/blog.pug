extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.hero.section
    .hero__container
        +image('./titles/portfolio-header.png', 'page title', 'title-img')
        .user.hero__user
            .user__pic-container
                .user__pic
                    +image('./content/user.jpg', 'user pic', 'user__pic-img')
            .user__info
                .title.title__auth Блог
                .user__desk Статьи, которые я написал
    .hero__down_btns
      a(href="#").down-btn
      +icon('arrow_down', 'down-btn__img')
    .hero__socials
        +socials
        input(type="checkbox")#burger
        label(for="burger")
          span
          span
          span
        nav
          ul
            li
              a(href="works.html").title.fullscreen-title мои работы
            li
              a(href="about.html").title.fullscreen-title обо мне
            li
              a(href="blog.html").title.fullscreen-title блог
            li
              a(href="index.html").title.fullscreen-title авторизация
  
  .about-page
    section.about
      .about__triangles
         +section-triangles('#ffffff', '#ffffff')
  section.blog
